---
import { isProd } from "@/consts";

interface Props {
  text?: string;
  show?: boolean;
  className?: string;
}

const {
  text = "preview",
  show,
  className = "border-teahouse-primary rounded-full text-[10px] px-1.5 py-[1px]",
} = Astro.props;

const shouldShow = show ?? !isProd;

// Return nothing if badge shouldn't be shown
if (!shouldShow) {
  return null;
}
---

<span
  class={`inline-flex items-center rounded-md border px-2.5 py-0.5 text-xs font-semibold transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 border-transparent bg-secondary text-secondary-foreground hover:bg-secondary/80 ${className}`}
  aria-label={text}
>
  {text}
</span>
